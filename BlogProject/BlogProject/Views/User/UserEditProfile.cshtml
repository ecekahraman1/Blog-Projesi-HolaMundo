@model UserUpdateViewModel
@{
    ViewData["Title"] = "UserEditProfile";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!--Yazar bilgilerini duzenleme ve ayarlar sayfasi-->
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Yazar Adı Soyadı</label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.username" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="text" asp-for="@Model.mail" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifre</label>
                    <input type="text" asp-for="@Model.password" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yolu</label>
                    <input type="text" asp-for="@Model.imageurl" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Hakkında Bilgisi</label>
                    @Html.TextAreaFor(x=>x.userabout,10,3,new{@class="form-control"})
                </div>


                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button asp-action="Index" asp-controller="Dashboard" class="btn btn-light">Iptal</button>
                <br />
            </form>
        </div>
    </div>
</div>
@{
    if (User.IsInRole("Writer"))
        {
        <a href="/AppUser/DeleteUser/" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Hesabımı Sil</a>
         
        }
}

