@using EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
<!--Kategoriler Sayfası-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kategoriler</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <div class="card-body">
                                <ul class="blog-icons my-4">

                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.Description
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Category/Index/@item.CategoryID/">@item.Name</a>
                                </h5>

                                <a href="~/Category/GoToCategory/@item.CategoryID/" class="btn btn-primary read-m">Kategoriyi İncele</a>

                            </div>
                        </div>
                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</section>
