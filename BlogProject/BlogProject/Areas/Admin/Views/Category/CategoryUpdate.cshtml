@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Düzenleme Sayfası</h1>
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    @Html.Label("Kategori ID")
    @Html.TextBoxFor(x=>x.CategoryID, new {@class="form-control"})
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextBoxFor(x=>x.Description,new{@class="form-control"})
    <br />
 @*   @Html.Label("Kategori Durumu")
    @Html.TextBoxFor(x=>x.Status,new{@class="form-control"})*@
    <br />
    <button class="btn btn-success">Güncelle</button>
}

